<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_margin="@dimen/def_margin"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:textColor="@color/black"
            android:id="@+id/recordName"
            android:textSize="@dimen/recordLayoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/sample_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/recordLayoutText"
            android:id="@+id/recordAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_address"
            app:layout_constraintTop_toBottomOf="@id/recordName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/def_margin"
            android:layout_marginTop="@dimen/def_margin"
            />
        <TextView
            android:id="@+id/recordMobile"
            android:textColor="@color/black"
            android:textSize="@dimen/recordLayoutText"
            android:text="@string/sample_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recordAddress"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/def_margin"
            android:layout_marginTop="@dimen/def_margin"
            />

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/colorPrimary"
            android:layout_marginEnd="@dimen/def_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.30"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@android:drawable/ic_delete"
            app:layout_constraintTop_toBottomOf="@id/editButton"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/def_margin"
            android:layout_marginTop="@dimen/def_margin"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>